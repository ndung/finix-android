<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background_light"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11.7dp"
        android:text="Setelah kamu mendaftarkan downline baru, maka kami akan mengirimkan password akun user melalui SMS ke nomor handphone yang didaftarkan" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11.7dp"
        android:theme="@style/TextLabel">

        <id.co.icg.reload.ui.customfonts.EditText_Roboto_Regular
            android:id="@+id/et_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/phonebook"
            android:drawableRight="@drawable/phonebook"
            android:hint="@string/phone_number"
            android:inputType="number"
            android:textColor="@color/trans_text_black"
            android:textSize="15sp" />

    </android.support.design.widget.TextInputLayout>

    <id.co.icg.reload.ui.customfonts.Button_Roboto_Medium
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:elevation="1dp"
        android:background="@drawable/signin_rect"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:paddingBottom="15.7dp"
        android:paddingTop="15.7dp"
        android:textColor="@color/bg_blue"
        android:letterSpacing="0.1"
        android:text="TAMBAH"/>

</LinearLayout>

