<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layerType="software"
        android:src="@drawable/dashed_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11.8dp"
        android:layout_marginStart="11.7dp"
        android:layout_marginTop="11.7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="158dp"
            android:layout_height="79.3dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="11.7dp"
            android:orientation="vertical">

            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kuhlk"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.7dp"
                android:text="kjbl"
                android:textColor="@color/text_gray"
                android:textSize="11.7sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.7dp"
                android:orientation="horizontal">

                <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/know_more"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11.7sp" />

                <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/apply_now"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11.7sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>