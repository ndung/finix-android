<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_marginBottom="11.7dp"
    android:layout_marginStart="11.7dp"
    android:layout_marginEnd="11.7dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="11.7dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12.7dp"
        android:layout_marginEnd="11.7dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center">

            <id.co.icg.reload.ui.customfonts.MyTextView_Montserrat_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="khki"
                android:id="@+id/tv_id"
                android:textColor="@color/text_black"
                android:textSize="13.3sp"/>

            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:text="khgk"
                android:id="@+id/tv_name"/>

            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_gray"
                android:id="@+id/tv_description"
                android:text="jhgvk"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">


            <net.igenius.customcheckbox.CustomCheckBox
                android:id="@+id/cb_c"
                android:layout_width="17.7dp"
                android:layout_height="17.7dp"
                android:layout_gravity="center"
                app:stroke_width="1dp"
                app:color_tick="@color/white"
                app:color_checked="#2dbc61"
                app:color_unchecked_stroke="@color/text_gray"/>

            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="#008489"
                android:id="@+id/tv_price"
                android:layout_marginTop="1.3dp"
                android:text="Rp 10.000"/>

            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/tv_pts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                android:text="10 Poin"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>