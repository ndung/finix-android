<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:orientation="vertical">

        <include layout="@layout/toolbar_transacation" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.7dp"
                    android:elevation="1dp"
                    android:orientation="vertical"
                    android:paddingLeft="24.3dp"
                    android:paddingRight="24.3dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18.9dp"
                        android:theme="@style/TextLabel">

                        <id.co.icg.reload.ui.customfonts.EditText_Roboto_Regular
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name"
                            android:textColor="@color/trans_text_black"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19.6dp"
                        android:theme="@style/TextLabel">

                        <id.co.icg.reload.ui.customfonts.EditText_Roboto_Regular
                            android:id="@+id/et_bod"
                            android:focusable="false"
                            android:inputType="date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/bod"
                            android:textColor="@color/trans_text_black"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="4dp"
                            android:textSize="11.7sp"
                            android:textColor="@color/text_gray"
                            android:text="@string/gender"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="13dp"
                            android:layout_marginStart="11.7dp"
                            android:layout_marginEnd="16.7dp">

                            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:text="Laki-laki"
                                android:textSize="15sp"
                                android:textColor="@color/text_black"
                                android:layout_marginStart="8dp"/>

                            <net.igenius.customcheckbox.CustomCheckBox
                                android:id="@+id/cb_man"
                                android:layout_width="17.7dp"
                                android:layout_height="17.7dp"
                                android:layout_gravity="center"
                                app:stroke_width="1dp"
                                app:color_tick="@color/white"
                                app:color_checked="#2dbc61"
                                app:color_unchecked_stroke="@color/text_gray"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="13dp"
                            android:layout_marginStart="11.7dp"
                            android:layout_marginEnd="16.7dp">

                            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:text="Perempuan"
                                android:textSize="15sp"
                                android:textColor="@color/text_black"
                                android:layout_marginStart="8dp"/>

                            <net.igenius.customcheckbox.CustomCheckBox
                                android:id="@+id/cb_woman"
                                android:layout_width="17.7dp"
                                android:layout_height="17.7dp"
                                android:layout_gravity="center"
                                app:stroke_width="1dp"
                                app:color_tick="@color/white"
                                app:color_checked="#2dbc61"
                                app:color_unchecked_stroke="@color/text_gray"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/view_gray"
                            android:layout_marginTop="13dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"/>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19.6dp"
                        android:theme="@style/TextLabel">

                        <id.co.icg.reload.ui.customfonts.EditText_Roboto_Regular
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/address"
                            android:textColor="@color/trans_text_black"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19.6dp"
                        android:theme="@style/TextLabel">

                        <id.co.icg.reload.ui.customfonts.AutoCompleteTextView_Roboto_Regular
                            android:id="@+id/tv_province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/province"
                            android:textColor="@color/trans_text_black"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19.6dp"
                        android:theme="@style/TextLabel">

                        <id.co.icg.reload.ui.customfonts.AutoCompleteTextView_Roboto_Regular
                            android:id="@+id/tv_city_regency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/city_regency"
                            android:textColor="@color/trans_text_black"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19.6dp"
                        android:theme="@style/TextLabel">

                        <id.co.icg.reload.ui.customfonts.EditText_Roboto_Regular
                            android:id="@+id/et_zip_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/zip_code"
                            android:inputType="number"
                            android:textColor="@color/trans_text_black"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19.6dp"
                        android:theme="@style/TextLabel">

                        <id.co.icg.reload.ui.customfonts.EditText_Roboto_Regular
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/trans_text_black"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</RelativeLayout>