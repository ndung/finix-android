<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF5FD"
    android:orientation="vertical">

    <include layout="@layout/toolbar_home" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_bg"
        android:orientation="horizontal" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_home"
        android:layout_marginBottom="60dp">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="11.7dp"
                        android:layout_marginEnd="8.3dp"
                        android:layout_marginStart="8.3dp"
                        android:layout_marginTop="11.7dp"
                        android:elevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16.7dp"
                                android:layout_marginTop="11.7dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/layout_balance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="@string/saldo"
                                            android:textColor="@color/text_gray"
                                            android:textSize="14sp" />

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="32dp"
                                            android:src="@drawable/topup_wallet" />
                                    </RelativeLayout>


                                    <id.co.icg.reload.ui.customfonts.MyTextView_Montserrat_Regular
                                        android:id="@+id/tv_balance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3.3dp"
                                        android:text="Rp 1.500.000"
                                        android:textColor="@color/text_black"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="16.7dp"
                                        android:layout_height="1.7dp"
                                        android:layout_marginTop="8.3dp"
                                        android:background="@drawable/view_bg_green" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="3dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5.7dp"
                                    android:layout_marginTop="5.7dp"
                                    android:layerType="software"
                                    android:src="@drawable/vertical_dashed_line" />

                                <LinearLayout
                                    android:id="@+id/layout_convert_to_balance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="@string/komisi"
                                            android:textColor="@color/text_gray"
                                            android:textSize="14sp" />

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="16dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="24dp"
                                            android:src="@drawable/requestmoney" />
                                    </RelativeLayout>

                                    <id.co.icg.reload.ui.customfonts.MyTextView_Montserrat_Regular
                                        android:id="@+id/tv_trx_fee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3.3dp"
                                        android:text="Rp 1.500.000"
                                        android:textColor="@color/text_black"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="16.7dp"
                                        android:layout_height="1.7dp"
                                        android:layout_marginTop="8.3dp"
                                        android:background="@drawable/view_bg_green" />

                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16.7dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/layout_redeem_points"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="@string/poin"
                                            android:textColor="@color/text_gray"
                                            android:textSize="14sp" />

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="32dp"
                                            android:src="@drawable/send_money" />

                                    </RelativeLayout>

                                    <id.co.icg.reload.ui.customfonts.MyTextView_Montserrat_Regular
                                        android:id="@+id/tv_point"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3.3dp"
                                        android:text="10"
                                        android:textColor="@color/text_black"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="16.7dp"
                                        android:layout_height="1.7dp"
                                        android:layout_marginTop="8.3dp"
                                        android:background="@drawable/view_bg_red" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="3dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5.7dp"
                                    android:layout_marginTop="5.7dp"
                                    android:layerType="software"
                                    android:src="@drawable/vertical_dashed_line" />

                                <LinearLayout
                                    android:id="@+id/layout_credit"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="@string/kredit"
                                            android:textColor="@color/text_gray"
                                            android:textSize="14sp" />

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="32dp"
                                            android:src="@drawable/credit" />
                                    </RelativeLayout>

                                    <id.co.icg.reload.ui.customfonts.MyTextView_Montserrat_Regular
                                        android:id="@+id/tv_liabilities"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3.3dp"
                                        android:text="Rp. 500.000"
                                        android:textColor="@color/text_black"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:layout_width="16.7dp"
                                        android:layout_height="1.7dp"
                                        android:layout_marginTop="8.3dp"
                                        android:background="@drawable/view_bg_red" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8.3dp"
                    android:layout_marginStart="8.3dp"
                    android:background="@color/white"
                    android:descendantFocusability="blocksDescendants"
                    android:elevation="2dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_mobile_recharge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/mobile" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="@string/mobile_recharge"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_data_recharge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/data_card" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="@string/data_recharge"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_mobile_postpaid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/landline" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="@string/mobile_postpaid"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_electric_prepaid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/electricity" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="Listrik"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_water_bill"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/water" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="Air"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_insurance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/insurance" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="Asuransi"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_pay_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/dth" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="@string/pay_tv_prepaid"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_transfer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/transfer" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="Transfer"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_train"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/train" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="Kereta Api"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/flight" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="Tiket Pesawat"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_donate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/transfusion" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="Donasi"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_other"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:src="@drawable/other_icon" />

                            <id.co.icg.reload.ui.customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.3dp"
                                android:text="Lainnya"
                                android:textColor="@color/text_black"
                                android:textSize="13.3sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="11.7dp"
                    android:layout_marginEnd="8.3dp"
                    android:layout_marginStart="8.3dp"
                    android:layout_marginTop="11.7dp">

                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/slider"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="-1dp"
                        app:layout_constraintDimensionRatio="H,12:4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>