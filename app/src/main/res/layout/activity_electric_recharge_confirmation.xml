<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_transaction" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37dp"
                android:layout_marginEnd="11.7dp"
                android:layout_marginStart="11.7dp"
                android:layout_marginTop="11.7dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/tv_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="8.7dp"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="11.7sp"
                        android:layout_marginLeft="16.7dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginBottom="10.7dp"
                        android:layout_marginTop="7.3dp"
                        android:src="@drawable/dashed_line"
                        android:layerType="software"/>

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.3dp"
                        android:text="@string/product"
                        android:textColor="@color/text_gray"
                        android:textSize="11.7sp"
                        android:layout_marginLeft="16.3dp" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/tv_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="7dp"
                        android:text="SI5 - Telkomsel"
                        android:textColor="@color/trans_text_black"
                        android:textSize="15sp"
                        android:layout_marginLeft="16.7dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="11.7dp"
                        android:layout_marginTop="6.7dp"
                        android:background="@color/view_gray" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.3dp"
                        android:text="@string/price"
                        android:textColor="@color/text_gray"
                        android:textSize="11.7sp"
                        android:layout_marginLeft="16.3dp" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="7dp"
                        android:text="Rp 5.000"
                        android:textColor="@color/trans_text_black"
                        android:textSize="15sp"
                        android:layout_marginLeft="16.7dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="11.7dp"
                        android:layout_marginTop="6.7dp"
                        android:background="@color/view_gray" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.3dp"
                        android:text="@string/electric_customer_id"
                        android:textColor="@color/text_gray"
                        android:textSize="11.7sp"
                        android:layout_marginLeft="16.3dp" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/tv_customer_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="7dp"
                        android:text="0812211111"
                        android:textColor="@color/trans_text_black"
                        android:textSize="15sp"
                        android:layout_marginLeft="16.7dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="11.7dp"
                        android:layout_marginTop="6.7dp"
                        android:background="@color/view_gray" />


                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.3dp"
                        android:text="@string/customer_name"
                        android:textColor="@color/text_gray"
                        android:textSize="11.7sp"
                        android:layout_marginLeft="16.3dp" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="7dp"
                        android:text="Ulala"
                        android:textColor="@color/trans_text_black"
                        android:textSize="15sp"
                        android:layout_marginLeft="16.7dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="11.7dp"
                        android:layout_marginTop="6.7dp"
                        android:background="@color/view_gray" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.3dp"
                        android:text="@string/customer_phone_number"
                        android:textColor="@color/text_gray"
                        android:textSize="11.7sp"
                        android:layout_marginLeft="16.3dp" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="7dp"
                        android:text="0812211111"
                        android:textColor="@color/trans_text_black"
                        android:textSize="15sp"
                        android:layout_marginLeft="16.7dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="44.7dp"
                        android:layout_marginTop="6.7dp"
                        android:background="@color/view_gray" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </FrameLayout>

    </LinearLayout>

    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/pay"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</RelativeLayout>