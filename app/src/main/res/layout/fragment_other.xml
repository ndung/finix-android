<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">


    <include layout="@layout/toolbar_home" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_bg"
        android:orientation="horizontal" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_home"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16.7dp"
                android:text="@string/general_settings"
                android:textColor="#008489"
                android:textSize="12.7sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="21dp"
                            android:layout_marginLeft="16.7dp"
                            android:layout_marginStart="16.7dp"
                            android:layout_marginTop="21dp"
                            android:text="@string/use_fingerprint"
                            android:textColor="@color/trans_text_black"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cb_fingerprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <LinearLayout
                    android:id="@+id/ll_verify_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9.7dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16.7dp"
                                android:layout_marginStart="16.7dp"
                                android:text="Verifikasi akun"
                                android:textColor="@color/trans_text_black"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="12dp"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/congrt" />

                    </LinearLayout>


                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10.7dp"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="7dp"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="11.7sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <LinearLayout
                    android:id="@+id/ll_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="9.7dp"
                        android:text="@string/change_password"
                        android:textColor="@color/trans_text_black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10.7dp"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:src="@drawable/more_icon" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/more_icon" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />


                <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginTop="9.7dp"
                    android:text="@string/facebook_account"
                    android:textColor="@color/trans_text_black"
                    android:textSize="15sp" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/fb_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/thumbnail_fb"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10.7dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginTop="9.7dp"
                    android:layout_toRightOf="@+id/thumbnail_fb"
                    facebook:com_facebook_login_text="Sambungkan"
                    facebook:com_facebook_logout_text="Lepaskan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <LinearLayout
                    android:id="@+id/ll_setting_printer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="9.7dp"
                        android:text="@string/setting_printer"
                        android:textColor="@color/trans_text_black"
                        android:textSize="15sp" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/tv_default_printer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10.7dp"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="7dp"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="11.7sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

            </LinearLayout>

            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16.7dp"
                android:text="@string/qr_code"
                android:textColor="#008489"
                android:textSize="12.7sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.7dp"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="vertical">

            </LinearLayout>

            <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16.7dp"
                android:text="@string/support"
                android:textColor="#008489"
                android:textSize="12.7sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="vertical">

                <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginTop="21dp"
                    android:text="@string/faq"
                    android:textColor="@color/trans_text_black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginTop="21dp"
                    android:text="@string/contact_us"
                    android:textColor="@color/trans_text_black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ececec" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="21dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="21dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/refer_and_earm" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="41.3dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="sans-serif"
                        android:text="Refer and Earn"

                        android:textColor="@color/black_txt_Color"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="21dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="21dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/language" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41.3dp"
                        android:fontFamily="sans-serif"
                        android:text="Change Language"
                        android:textColor="@color/black_txt_Color"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="21dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="21dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/help_1" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41.3dp"
                        android:fontFamily="sans-serif"
                        android:text="Help"
                        android:textColor="@color/black_txt_Color"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="21dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="21dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/policies" />

                    <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41.3dp"
                        android:fontFamily="sans-serif"
                        android:text="Policies"
                        android:textColor="@color/black_txt_Color"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.7dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="21dp"
                android:paddingLeft="16.3dp"
                android:paddingTop="21dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/signout" />

                <id.co.icg.reload.ui.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="41.3dp"
                    android:fontFamily="sans-serif"
                    android:text="Sign Out"
                    android:textColor="@color/black_txt_Color"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>